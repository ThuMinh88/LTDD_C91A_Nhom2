<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainDangBai">
    <LinearLayout
        android:background="@mipmap/c3583"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/imageview"
            android:layout_marginTop="10dp"
            android:scrollX="10dp"
            android:src="@mipmap/user_avatar1"
            android:layout_width="90dp"
            android:layout_height="80dp">
        </ImageView>
        <TextView
            android:textColor="#ff0"
            android:textStyle="bold"
            android:text="Admin"
            android:layout_marginLeft="10dp"
            android:id="@+id/TEXT_NAME"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:textStyle="bold"
            android:textColor="#F44336"
            android:layout_marginLeft="10dp"
            android:text="admin@gmail.com"
            android:id="@+id/TEXT_Gmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

        <TextView
            android:textStyle="bold"
            android:text="Online"
            android:id="@+id/TEXTTrangThai"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>
    </LinearLayout>
    <TextView
        android:textColor="#EF291A"
        android:gravity="center"
        android:text="Đăng Bài"
        android:textSize="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bd_gardient"
        android:fontFamily="@font/futura"
        android:textAllCaps="true"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical"
        android:gravity="center">
        <EditText
            android:inputType="text"
            android:id="@+id/dbTentruyen"
            android:layout_gravity="center"
            android:hint="Tên truyện"
            android:layout_marginTop="30dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"></EditText>

        <EditText
            android:inputType="text"
            android:id="@+id/dbnoidung"
            android:hint="Nội dung"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"></EditText>

        <EditText
            android:inputType="text"
            android:id="@+id/dbimg"
            android:hint="Ảnh"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"></EditText>

        <Button
            android:inputType="text"
            android:id="@+id/dbdangbai"
            android:textSize="30dp"
            android:layout_gravity="center"
            android:text="OK"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/futura"
            android:background="@drawable/bg_with_shadow"
            android:textAllCaps="true"></Button>


    </LinearLayout>

</LinearLayout>