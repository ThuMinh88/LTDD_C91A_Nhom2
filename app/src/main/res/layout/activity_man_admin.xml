<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".ManAdmin">
    <LinearLayout
        android:background="@mipmap/c3583"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/imageview"
            android:layout_marginTop="10dp"
            android:scrollX="10dp"
            android:src="@mipmap/user_avatar1"
            android:layout_width="90dp"
            android:layout_height="80dp">
        </ImageView>
        <TextView
            android:textColor="#ff0"
            android:textStyle="bold"
            android:text="Admin"
            android:layout_marginLeft="10dp"
            android:id="@+id/TEXT_NAME"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:textStyle="bold"
            android:textColor="#F44336"
            android:layout_marginLeft="10dp"
            android:text="admin@gmail.com"
            android:id="@+id/TEXT_Gmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

        <TextView
            android:textStyle="bold"
            android:text="Online"
            android:id="@+id/TEXTTrangThai"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>
    </LinearLayout>
    <Button
        android:layout_gravity="center"
        android:id="@+id/buttonThemtruyen"
        android:text="Thêm truyện"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_radius_item"></Button>
    <ListView
        android:id="@+id/listviewAdmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>
</LinearLayout>